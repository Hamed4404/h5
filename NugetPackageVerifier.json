{
    "default": { // Rules to run for packages not listed in any other set.
        "rules": [
            "DefaultCompositeRule"
        ],
        "packages": {
            "Microsoft.AspNetCore.All": {
                "Exclusions": {
                    "PACKAGE_DEPENDENCY_VERSION_UPPER_BOUND": {
                        "Microsoft.AspNetCore.All": "The metapackage should require exact versions"
                    }
                }
            },
            "Microsoft.AspNetCore.Mvc.Razor.ViewCompilation": {
                "exclusions": {
                    "BUILD_ITEMS_FRAMEWORK": {
                        "*": "Purposefully creating a netstandard2.0 build item so our targets can be injected for desktop and non-desktop based projects."
                    }
                }
            },
            "Microsoft.VisualStudio.Web.CodeGeneration.Tools": {
                "exclusions": {
                    "BUILD_ITEMS_FRAMEWORK": {
                        "*": "This package intentionally targets .NET Standard 1.0 even though it only carries .NET Core assemblies."
                    }
                },
                "packageTypes": [
                    "DotnetCliTool"
                ]
            },
            "Microsoft.VisualStudio.Web.BrowserLink": {
                "Exclusions": {
                    "NUSPEC_TAGS": {
                        "*": "No package verification performed on the repo"
                    }
                }
            },
            "Microsoft.AspNetCore.Identity.UI": {
                "Exclusions": {
                    "DOC_MISSING": {
                        "lib/netstandard2.0/Microsoft.AspNetCore.Identity.UI.dll": "This is a library with packages UI"
                    }
                }
            }
        }
    }
}
