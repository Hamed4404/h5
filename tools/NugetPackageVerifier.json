{
    "adx": { // Packages written by the ADX team and that ship on NuGet.org
        "rules": [
            "SigningVerificationCompositeRule"
        ],
        "packages": {
            "Microsoft.VisualStudio.Web.CodeGeneration.Tools": {
                "exclusions": {
                    "BUILD_ITEMS_FRAMEWORK": {
                        "*": "This package intentionally targets .NET Standard 1.0 even though it only carries .NET Core assemblies."
                    }
                },
                "packageTypes": [
                    "DotnetCliTool"
                ]
            },
            "Microsoft.VisualStudio.Web.BrowserLink": {
                "Exclusions": {
                    "NUSPEC_TAGS": {
                        "*": "No package verification performed on the repo"
                    }
                }
            }
        }
    },
    "default": { // Rules to run for packages not listed in any other set.
        "rules": [
            "SigningVerificationCompositeRule"
        ],
        "packages": {}
    }
}
