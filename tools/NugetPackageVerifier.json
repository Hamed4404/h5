{
    "adx": { // Packages written by the ADX team and that ship on NuGet.org
        "rules": [
            "SigningVerificationCompositeRule"
        ],
        "packages": {
            "Microsoft.AspNetCore.Mvc.Razor.ViewCompilation": {
                "exclusions": {
                    "DOC_MISSING": {
                        "lib/netcoreapp2.0/Microsoft.AspNetCore.Mvc.Razor.ViewCompilation.dll": "Not a class library. Docs not required for CLI tools"
                    }
                }
            },
            "Microsoft.VisualStudio.Web.CodeGeneration.Tools": {
                "exclusions": {
                    "BUILD_ITEMS_FRAMEWORK": {
                        "*": "This package intentionally targets .NET Standard 1.0 even though it only carries .NET Core assemblies."
                    }
                },
                "packageTypes": [
                    "DotnetCliTool"
                ]
            },
            "Microsoft.VisualStudio.Web.BrowserLink": {
                "Exclusions": {
                    "NUSPEC_TAGS": {
                        "*": "No package verification performed on the repo"
                    }
                }
            },
            "Microsoft.AspNetCore.All": {
                "Exclusions": {
                    "THIRDPARTY_DEPENDENCY_NOT_REGISTERED": {
                        "Microsoft.AspNetCore.All; .NETCoreApp,Version=v2.0": "Temporary exception while waiting for Coherence-Signed to get a new version of NugetPackageVerifier."
                    }
                }
            }
        }
    },
    "default": { // Rules to run for packages not listed in any other set.
        "rules": [
            "SigningVerificationCompositeRule"
        ],
        "packages": {}
    }
}
