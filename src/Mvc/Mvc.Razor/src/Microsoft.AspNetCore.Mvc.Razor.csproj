<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>ASP.NET Core MVC Razor view engine for CSHTML files.</Description>
    <TargetFramework>$(DefaultNetCoreTargetFramework)</TargetFramework>
    <IsAspNetCoreApp>true</IsAspNetCoreApp>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageTags>aspnetcore;aspnetcoremvc;cshtml;razor</PackageTags>
    <IsPackable>false</IsPackable>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" />
    <Reference Include="Microsoft.AspNetCore.Razor.Runtime" />
    <Reference Include="Microsoft.Extensions.Caching.Memory" />
    <Reference Include="Microsoft.Extensions.FileProviders.Composite" />
  </ItemGroup>

  <ItemGroup>
    <InternalVisibleTo Include="Microsoft.AspNetCore.Mvc" />
    <InternalVisibleTo Include="Microsoft.AspNetCore.Mvc.RazorPages" />
    <InternalVisibleTo Include="Microsoft.AspNetCore.Mvc.TagHelpers" />
    <InternalVisibleTo Include="Microsoft.AspNetCore.Mvc.Test" />
    <InternalVisibleTo Include="Microsoft.AspNetCore.Mvc.Razor.Test" />
    <InternalVisibleTo Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation.Test" />
    <InternalVisibleTo Include="Microsoft.AspNetCore.Mvc.RazorPages.Test" />
    <InternalVisibleTo Include="Microsoft.AspNetCore.Mvc.TagHelpers.Test" />
    <InternalVisibleTo Include="DynamicProxyGenAssembly2" />
  </ItemGroup>
</Project>
