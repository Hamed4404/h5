<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <TestGroupName>IISNewHandler.FunctionalTests</TestGroupName>
    <DisableFastUpToDateCheck>True</DisableFastUpToDateCheck>
    <SkipTests Condition=" '$(SkipIISNewHandlerTests)' == 'true' ">true</SkipTests>
  </PropertyGroup>

  <Import Project="../FunctionalTest.props" />

  <ItemGroup>
    <Compile Include="..\Common.FunctionalTests\**\*.cs" />
    <Compile Include="..\IIS.Shared.FunctionalTests\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Common.Tests\Common.Tests.csproj" />
    <ProjectReference Include="..\testassets\InProcessWebSite\InProcessWebSite.csproj">
      <ReferenceOutputAssembly>False</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <!-- The versions on these references are hard-coded because we want to ensure we maintain backwards compatibility with ANCM 2.2.0 -->
    <PackageReference Include="Microsoft.AspNetCore.AspNetCoreModuleV2" Version="2.2.0">
      <AllowExplicitReference>true</AllowExplicitReference>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.AspNetCore.Hosting" />
    <Reference Include="Microsoft.Extensions.Logging.Testing" />
    <Reference Include="Microsoft.Extensions.Logging" />
    <Reference Include="System.Diagnostics.EventLog" />
    <Reference Include="System.Net.WebSockets.WebSocketProtocol" />
  </ItemGroup>

  <Target Name="RemoveSourceOverride" BeforeTargets="_CopyOutOfDateSourceItemsToOutputDirectory">
    <ItemGroup>
    <!-- There is a race between which dll is copied to the bin directory between ANCM in a package and the built ANCM. 
        We want to guarantee the ANCM in the nuget package is used, so remove all paths that contain paths in the artifacts directory.
        -->
      <SourceItemsToRemove Include="@(_SourceItemsToCopyToOutputDirectory)" Condition="$([System.String]::Copy(%(_SourceItemsToCopyToOutputDirectory.FullPath)).Contains('AspNetCoreModuleShim')) == 'true'" />
      <SourceItemsToRemove Include="@(_SourceItemsToCopyToOutputDirectory)" Condition="$([System.String]::Copy(%(_SourceItemsToCopyToOutputDirectory.FullPath)).Contains('InProcessRequestHandler')) == 'true'" />
      <SourceItemsToRemove Include="@(_SourceItemsToCopyToOutputDirectory)" Condition="$([System.String]::Copy(%(_SourceItemsToCopyToOutputDirectory.FullPath)).Contains('OutOfProcessRequestHandler')) == 'true'" />
      <_SourceItemsToCopyToOutputDirectory Remove="@(SourceItemsToRemove)" />
   </ItemGroup>
  </Target>

</Project>
