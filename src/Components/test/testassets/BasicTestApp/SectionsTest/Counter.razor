@using Microsoft.AspNetCore.Components.Sections

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<SectionContent Name="test">
    <p id="counter">@currentCount</p>
</SectionContent>

<button id="increment_button" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
